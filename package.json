{
  "name": "jsdom-extended",
  "version": "0.1.1",
  "description": "Extended JSDOM mocks: geometry, raf, ResizeObserver, browser-like helpers.",
  "license": "MIT",
  "author": "whenessel",
  "keywords": [
    "jsdom",
    "mock",
    "testing",
    "geometry",
    "ResizeObserver"
  ],
  "private": false,
  "type": "module",
  "main": "./dist/jsdom-extended.umd.cjs",
  "module": "./dist/jsdom-extended.js",
  "unpkg": "./dist/jsdom-extended.umd.cjs",
  "typings": "./dist/jsdom-extended.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/jsdom-extended.d.ts",
        "default": "./dist/jsdom-extended.js"
      },
      "require": {
        "types": "./dist/jsdom-extended.d.cts",
        "default": "./dist/jsdom-extended.umd.cjs"
      }
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "sideEffects": false,
  "scripts": {
    "types:check": "tsc -noEmit",
    "build": "yarn types:check && vite build",
    "build:watch": "vite build --watch"
  },
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "jsdom": "^27.2.0"
  },
  "devDependencies": {
    "@types/dom-mediacapture-transform": "^0.1.11",
    "@types/node": "^25.0.9",
    "@types/offscreencanvas": "^2019.7.3",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild-plugin-umd-wrapper": "^2.0.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "browserslist": [
    "supports es6-class"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whenessel/jsdom-extended.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
